<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Location:"
        android:id="@+id/tvLocation" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Latitude:"
        android:id="@+id/tvLatitude" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLatitude"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Longitude:"
        android:id="@+id/tvLongitude" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLongitude"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Zone time:"
        android:id="@+id/tvZone" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvZone"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Local sidereal time:"
        android:id="@+id/tvSide" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSide"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:id="@+id/iv1" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Moon phase:"
        android:id="@+id/tvMoonPhase"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMoonPhase"
        android:layout_margin="2dp"
        android:background="@drawable/round_rect"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="Moon illumination:"
        android:id="@+id/tvMoonIlm"/>
</RelativeLayout>